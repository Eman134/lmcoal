{
    "compilerOptions": {
        "target": "es2022",
        "module": "CommonJS",
        "rootDir": "src",
        "moduleResolution": "node",
        "baseUrl": "./",
        "sourceMap": true,
        "outDir": "dist",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "paths": {
            "*": ["node_modules/*", "src/types/*"],
            "@LMCoal/*": ["src/*"]
        }
    },
    "include": ["src/**/*"]
}

